<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginVertical="6dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/namaKegiatan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nama Kegiatan : "
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/button" />

                <TextView
                    android:id="@+id/sNamaKegiatan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Olahraga"
                    android:textSize="20sp"
                    android:layout_marginStart="8dp"
                    android:textColor="@color/md_black_1000"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/frekuensiKegiatan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Frekuensi Kegiatan : "
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="@color/button" />

                <TextView
                    android:id="@+id/sFrekuensiKegiatan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sehari 5x"
                    android:textSize="20sp"
                    android:layout_marginStart="8dp"
                    android:textColor="@color/md_black_1000"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tanggalKegiatan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tanggal Mulai : "
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="@color/button" />

                <TextView
                    android:id="@+id/sTanggalKegiatan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="13 Januari 2023"
                    android:textSize="20sp"
                    android:layout_marginStart="8dp"
                    android:textColor="@color/md_black_1000"/>
            </LinearLayout>
        </LinearLayout>

</androidx.cardview.widget.CardView>